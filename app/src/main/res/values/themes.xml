<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataStructuringFirebase" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="colorSecondaryVariant">@color/colorOrange</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!--Default Font Family-->
        <item name="fontFamily">@font/sf_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- FULL SCREEN Theme -->
    <style name="Theme.DataStructuringFirebase.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="colorSecondaryVariant">@color/colorOrange</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!--Default Font Family-->
        <item name="fontFamily">@font/sf_light</item>
        <!-- Status bar color. -->
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CollapseAppBar" parent="Theme.DataStructuringFirebase.AppBarOverlay">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <!-- Custom Headline and font Themes -->
    <style name="Theme.DataStructuringFirebase.Headline" parent="TextAppearance.MaterialComponents.Headline4">

    </style>
    <style name="Theme.DataStructuringFirebase.Title" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/sf_light</item>
    </style>

    <style name="Theme.DataStructuringFirebase.Body" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/common_google_signin_btn_text_light</item>
        <item name="fontFamily">@font/sf_light</item>
    </style>

    <style name="Theme.DataStructuringFirebase.Caption" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sf_light</item>
    </style>

    <style name="Theme.DataStructuringFirebase.date" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_light</item>
    </style>
    <style name="Theme.DataStructuringFirebase.ItemBoard.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/sf_light</item>
    </style>
    <style name="Theme.DataStructuringFirebase.ItemBoard.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sf_light</item>
    </style>
    <style name="Theme.DataStructuringFirebase.ItemBoard.Caption" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_light</item>
    </style>

    <style name="Theme.DataStructuringFirebase.View.ProgressBar.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sf_light</item>
    </style>
    <style name="Theme.DataStructuringFirebase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DataStructuringFirebase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DataStructuringFirebase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>