<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.data_structuring_firebase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataStructuringFirebase">
        <activity android:name=".UI.Views.AddBoard.AddBoard"></activity>
        <activity
            android:name=".UI.Views.Board.ShowBoardActivity"
            android:theme="@style/Theme.DataStructuringFirebase.FullScreen" />
        <activity
            android:name=".UI.Views.LoginSignUp.LoginSignupActivity"
            android:theme="@style/Theme.DataStructuringFirebase.FullScreen" />
        <activity android:name=".UI.Views.AddTask.AddTask" />
        <activity
            android:name=".UI.Views.MainActivity"
            android:theme="@style/Theme.DataStructuringFirebase.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>