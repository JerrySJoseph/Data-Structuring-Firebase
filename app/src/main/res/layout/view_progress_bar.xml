<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_50sdp"
    android:orientation="vertical"
    android:gravity="center"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Theme.DataStructuringFirebase.View.ProgressBar.Text"
            android:text="Progress Bar"/>
        <TextView
            android:id="@+id/value_indicator"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Theme.DataStructuringFirebase.View.ProgressBar.Text"
            android:text="80%"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp">
        <LinearLayout
            android:id="@+id/indicator_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_highlight_offwhite"/>
        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_10sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_highlight_high"
            android:elevation="@dimen/_5sdp"/>
    </RelativeLayout>

</LinearLayout>