<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp">
        <RelativeLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp">
            <View
                android:id="@+id/indicator"
                android:layout_height="match_parent"
                android:layout_width="@dimen/_5sdp"
                android:background="@color/colorBlue"
                android:layout_marginRight="@dimen/_5sdp"
                />
            <LinearLayout
                android:layout_toRightOf="@id/indicator"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/title"
                        style="@style/Theme.DataStructuringFirebase.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:lines="1"
                        android:text="Get to the Store"
                        />

                    <ImageView
                        android:id="@+id/important"
                        android:clickable="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.DataStructuringFirebase.Body"
                    android:lines="2"
                    android:text="This is a small description of the work that you may have decided to do.."/>

            </LinearLayout>
            <TextView
                android:layout_toRightOf="@id/indicator"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_5sdp"
                android:id="@+id/timestamp"
                android:lines="1"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawableTint="?attr/colorPrimary"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.DataStructuringFirebase.Caption"
                android:textColor="@color/colorBlue"
                android:text="Today at 1:02 pm"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
